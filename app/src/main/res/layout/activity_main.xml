<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="66dp"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    tools:context=".MainActivity"
    tools:ignore="RtlSymmetry">
    


        <TextView
            android:id="@+id/textNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/golos"
            android:lineHeight="12dp"
            android:text="Заметки"
            android:textSize="24sp"
            android:textFontWeight="500"            
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/findNotes"
            android:layout_width="214dp"
            android:layout_height="36dp"
            app:layout_constraintTop_toBottomOf="@+id/textNotes"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/buttonTasks"
            android:background="#D9D9D9"
            android:layout_marginTop="24dp"
            android:hint="Поиск по заметкам"
            android:fontFamily="@font/golos"
            android:textSize="12sp"
            android:textFontWeight="400"
            android:autofillHints="">

        </EditText>

        <Button
            android:id="@+id/buttonTasks"
            android:layout_width="101dp"
            android:layout_height="36dp"
            android:background="@drawable/button_custom"
            android:fontFamily="@font/golos"
            android:text="Задачи"
            android:textAllCaps="false"

            app:layout_constraintLeft_toRightOf="@id/findNotes"
            app:layout_constraintRight_toRightOf="@+id/idRVCourse"
            app:layout_constraintTop_toTopOf="@+id/findNotes"
            tools:ignore="NotSibling">

        </Button>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            app:layout_constraintTop_toBottomOf="@+id/findNotes">

                <LinearLayout
                    android:id="@+id/linearLayoutMain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toTopOf="@+id/scrollView"
                    android:orientation="horizontal">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/idRVCourse"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"


                        >
                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>
        </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>